@{
    ViewData["Title"] = "RoomBookingList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model DataTable;

<div class="container-fluid">
    <div class="portlet-body">
        <div>
            <h2>@TempData["HT_RoomBooking_DeleteByPK_Msg"]</h2>
            <h2>@TempData["HT_RoomBooking_UpdateByPK_Msg"]</h2>
        </div>

        <div class="container">
            <h2>Search Box</h2>
            <hr />
            <form method="post" asp-area="HT_RoomBooking" asp-controller="HT_RoomBooking">
                <div class="row">
                    <div class="form-floating mb-7 col-4">
                        <input type="text" class="form-control " id="floatingInput" name="DocumentType" placeholder="Enter DocumentType here.." value="@ViewBag.DocumentType" />
                        <label for="floatingInput">&nbsp;&nbsp; Document Type</label>
                    </div>

                    <div class="form-floating mb-7 col-4">
                        <input type="text" class="form-control " id="floatingInput" name="RoomTypeName" placeholder="Enter RoomType here.." value="@ViewBag.RoomTypeName" />
                        <label for="floatingInput">&nbsp;&nbsp; RoomType Name</label>
                    </div>

                    <div class="form-floating mb-7 col-4">
                        <input type="text" class="form-control " id="floatingInput" name="FirstName" placeholder="Enter FirstName here.." value="@ViewBag.FirstName" />
                        <label for="floatingInput">&nbsp;&nbsp; First Name</label>
                    </div>

                    <div class="form-floating mb-7 col-4">
                        <input type="text" class="form-control " id="floatingInput" name="MiddleName" placeholder="Enter MiddleName here.." value="@ViewBag.MiddleName" />
                        <label for="floatingInput">&nbsp;&nbsp; Middle Name</label>
                    </div>

                    <div class="form-floating mb-7 col-4">
                        <input type="text" class="form-control " id="floatingInput" name="LastName" placeholder="Enter LastName here.." value="@ViewBag.LastName" />
                        <label for="floatingInput">&nbsp;&nbsp; Last Name</label>
                    </div>

                    <div class="form-floating mb-7 col-4">
                        <input type="text" class="form-control " id="City" name="City" placeholder="Enter City here.." value="@ViewBag.City" />
                        <label for="floatingInput">&nbsp;&nbsp; City</label>
                    </div>

                     <div class="form-floating mb-7 col-4">
                        <input type="text" class="form-control " id="floatingInput" name="State" placeholder="Enter State here.." value="@ViewBag.State" />
                        <label for="floatingInput">&nbsp;&nbsp; State</label>
                    </div>

                    <div class="form-floating mb-7 col-4">
                        <input type="text" class="form-control " id="floatingInput" name="Country" placeholder="Enter Country here.." value="@ViewBag.Country" />
                        <label for="floatingInput">&nbsp;&nbsp; Country</label>
                    </div>

                    <div class="form-floating mb-7 col-4">
                        <input type="text" class="form-control " id="floatingInput" name="DocumentNumber" placeholder="Enter DocumentNumber here.." value="@ViewBag.DocumentNumber" />
                        <label for="floatingInput">&nbsp;&nbsp; DocumentNumber</label>
                    </div>

                    <div class="col-4">
                        <button type="submit" class="btn btn-success " asp-action="Search">Search</button>
                        &nbsp;
                        <a class="btn btn-danger " asp-action="Index">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        <hr />

        <div class="d-flex">
            <div style="flex-grow:9">
                <span style="font-size: 30px; font-weight: 700; margin-bottom: 10px">Room Booking List</span>
            </div>
            <div style="flex-grow:1">
                <form asp-area="HT_RoomBooking" asp-controller="HT_RoomBooking">
                    <button type="submit" class="btn btn-primary " asp-action="Add">Insert Record</button>
                </form>
            </div>
            <hr />
        </div>
    </div>
    <br />

    <div class="table-responsive pb-3 border-dark border-bottom border-3 align-middle">
        <table id="kt_datatable_dom_positioning" class="table table-striped table-row-bordered gy-5 gs-7 border rounded">
            <thead>
                <tr class="fw-bold fs-6 text-gray-800 px-7">

                    <th scope="col">Image</th>
                    <th scope="col">DocumentType</th>
                    <th scope="col">RoomType Name</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Middle Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Mobile No</th>
                    <th scope="col">Email</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                    <th scope="col">Country</th>
                    <th scope="col">Document Number</th>
                    @*<th scope="col">Creation Date</th>
                    <th scope="col">Modification Date</th>*@
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow dr in Model.Rows)
                {
                    <tr>
                        <td><img alt="logo" src="@Url.Content(String.Format("~/upload/{0}",dr["PhotoPath"]))" style="height :auto; width:50px;" /> </td>
                        <td>@dr["DocumentType"]</td>
                        <td>@dr["RoomTypeName"]</td>
                        <td>@dr["FirstName"]</td>
                        <td>@dr["MiddleName"]</td>
                        <td>@dr["LastName"]</td>
                        <td>@dr["MobileNo"]</td>
                        <td>@dr["Email"]</td>
                        <td>@dr["city"]</td>
                        <td>@dr["State"]</td>
                        <td>@dr["Country"]</td>
                        <td>@dr["DocumentNumber"]</td>
                        
                       @* <td>@Convert.ToDateTime(dr["CreationDate"]).ToString("dd-MM-yyyy")</td>
                        <td>@Convert.ToDateTime(dr["ModificationDate"]).ToString("dd-MM-yyyy")</td>*@
                        <td>
                            <form asp-area="HT_RoomBooking" asp-controller="HT_RoomBooking">
                                <button type="submit" class="btn btn-primary " asp-action="Add" asp-route-RoomBookingID="@Convert.ToInt32(dr["RoomBookingID"])"><i class="fa-solid fa-pen-to-square"></i></button>
                            </form>
                        </td>
                        <td>
                            <form asp-area="HT_RoomBooking" asp-controller="HT_RoomBooking">
                                <button type="submit" class="btn btn-danger " asp-action="Delete" asp-route-RoomBookingID="@Convert.ToInt32(dr["RoomBookingID"])" onclick="return Take_Confirmation()"><i class="fa-solid fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts
    {
    <script>
        function Take_Confirmation() {
            if (confirm("Are you sure you want to Delete?")) {
                return true;
            }
            else {
                return false;
            }
        }

    </script>
    }
