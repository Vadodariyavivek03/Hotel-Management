@{
    ViewData["Title"] = "RoomTypeAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Hotel_Project.Areas.HT_RoomType.Models.HT_RoomTypeModel;

<div class="row">

    <div class="col">

        <h2>@TempData["HT_RoomType_Insert_Msg"]</h2>

        <div class="container">
            <h2>Room Type</h2>
            <hr />
            <form method="post" enctype="multipart/form-data" asp-area="HT_RoomType" asp-controller="HT_RoomType">

                @Html.HiddenFor(x => x.RoomTypeID)

                <div class="form-floating mb-7">
                    <input type="text" id="floatingInput" class="form-control " asp-for="RoomTypeName" placeholder="Enter RoomTypeName Here." />
                    <label for="floatingInput"><span class="text-danger">*</span>RoomTypeName</label>
                    <span asp-validation-for="RoomTypeName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-7">
                    <input type="text" id="floatingInput" class="form-control " asp-for="Capacity" placeholder="Enter Capacity Here." />
                    <label for="floatingInput"><span class="text-danger">*</span>Capacity</label>
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="form-floating mb-7">
                    <input type="text" id="floatingInput" class="form-control " asp-for="RoomNumber" placeholder="Enter RoomNumber Here." />
                    <label for="floatingInput"><span class="text-danger">*</span>RoomNumber</label>
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>

                <div class="form-floating mb-7">
                    <input type="text" id="floatingInput" class="form-control " asp-for="Facilities" placeholder="Enter Facilities Here." />
                    <label for="floatingInput"><span class="text-danger">*</span>Facilities</label>
                    <span asp-validation-for="Facilities" class="text-danger"></span>
                </div>

                <div class="form-floating mb-7">
                    <input type="text" id="floatingInput" class="form-control " asp-for="Price" placeholder="Enter Price Here." />
                    <label for="floatingInput"><span class="text-danger">*</span>Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

             @* 
                <div class="form-group mb-7">
                    <label class="form-label">Image</label>
                    <input type="file" class="form-control " asp-for="File" placeholder="Upload File." />
                </div>*@

               @* @Html.HiddenFor(x => x.CreationDate)
                @Html.HiddenFor(x => x.ModificationDate)
                @Html.HiddenFor(x => x.PhotoPath)*@

                <input type="hidden" class="form-control" asp-for="UserID" value="@ViewBag.UserID" />

                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-success " asp-action="Save">Save</button>
                        &nbsp;
                        <a class="btn btn-danger " asp-action="Index">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}