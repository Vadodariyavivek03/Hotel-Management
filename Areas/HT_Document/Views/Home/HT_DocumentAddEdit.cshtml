@{
    ViewData["Title"] = "DocumentAdd/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Hotel_Project.Areas.HT_Document.Models.HT_DocumentModel;

<div class="row">
    <div class="col">

        <h2>@TempData["HT_Document_Insert_Msg"]</h2>
        <h2>Document</h2>
        <hr />
        <form asp-area="HT_Document" asp-controller="HT_Document">

            @Html.HiddenFor(x => x.DocumentID)

            <div class="form-floating mb-7">
                <input type="text" class="form-control " id="floatingInput" asp-for="DocumentType" placeholder="Enter Here..." />
                <label for="floatingInput"><span class="text-danger">*</span>Document</label>
                <span asp-validation-for="DocumentType" class="text-danger"></span>
            </div>

        @*    <div class="form-group mb-7">
                <label class="form-label">Image</label>
                <input type="file" class="form-control " asp-for="File" placeholder="Upload File." />
            </div>*@

            @Html.HiddenFor(x => x.CreationDate)
            @Html.HiddenFor(x => x.ModificationDate)
         @*   @Html.HiddenFor(x => x.PhotoPath)*@
            <input type="hidden" class="form-control" asp-for="UserID" value="@ViewBag.UserID"/>

            <div class="row">
                <div class="col-4">
                    <button type="submit" class="btn btn-success " asp-action="Save">Save</button>
                    &nbsp;
                    <a class="btn btn-danger " asp-action="Index">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}